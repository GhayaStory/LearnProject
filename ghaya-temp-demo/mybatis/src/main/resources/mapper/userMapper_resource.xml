<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--绑定一个对应的dao/mapper接口-->
<mapper namespace="com.ghaya.dao.UserMapper">
    <select id="selectUser" resultType="com.ghaya.pojo.User">
        select * from user
     </select>
    <select id="selectUserById" parameterType="int" resultType="com.ghaya.pojo.User">
      select * from user where id = #{id}
    </select>
    <insert id="addUser" parameterType="com.ghaya.pojo.User">
      insert into user (id,name,pwd) values (#{id},#{name},#{pwd})
    </insert>
    <update id="updateUser" parameterType="com.ghaya.pojo.User">
      update user set name=#{name},pwd=#{pwd} where id = #{id}
    </update>
    <delete id="deleteUser" parameterType="int">
      delete from user where id = #{id}
    </delete>

    <insert id="addUserForMap" parameterType="map">
      insert into user (name,pwd) values (#{username},#{password})
    </insert>

</mapper>