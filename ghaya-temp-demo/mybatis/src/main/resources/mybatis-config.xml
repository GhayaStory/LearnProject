<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://192.168.1.206:3308/mybatis?useSSL=true&amp;useUnicode=true&amp;characterEncoding=utf8"/>
                <property name="username" value="root"/>
                <property name="password" value="123456"/>
            </dataSource>
        </environment>
    </environments>
    <!--需要注册mapper.xml -->
    <mappers>
        <!--<mapper resource="com/ghaya/dao/userMapper_java.xml"/>--><!--资源文件放在java包下需要maven当中处理资源自动导出问题，不然不会自动把xml加进去-->
        <mapper resource="mapper/userMapper_resource.xml"/>
    </mappers>
</configuration>